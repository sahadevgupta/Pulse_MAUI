<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pulse_MAUI.Views.MenuPage"
             xmlns:controls="clr-namespace:Pulse_MAUI.Controls"
             xmlns:helpers="clr-namespace:Pulse_MAUI.Helpers"
             xmlns:resources="clr-namespace:Pulse_MAUI.Resources.Languages"
             xmlns:views="clr-namespace:Pulse_MAUI.Views.ContentViews"
             Title="MenuPage">
    <Grid HorizontalOptions="FillAndExpand"
	VerticalOptions="FillAndExpand">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackLayout Grid.Row="0">
            <Grid BackgroundColor="{x:Static helpers:Colors.StandardOrange}"
              RowSpacing="0"
			Grid.Row="0"
			HorizontalOptions="FillAndExpand"
			Padding="10,10,10,10"
			VerticalOptions="FillAndExpand">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Image HorizontalOptions="Start" Margin="0,10,0,0"   VerticalOptions="Start" Source="Pulse.png" 
                   HeightRequest="30" WidthRequest="30"
                   Grid.Column="0" Grid.Row="0" />
                <controls:CustomLabel FontSize="40"
				Grid.Row="0"
                Grid.Column="1"
				HorizontalOptions="Start"
				Text="{resources:Translate MenuPage_Title}"
				TextColor="White"
				VerticalOptions="Start"/>
                <views:ProfileView Grid.Row="1" Grid.ColumnSpan="2" />
            </Grid>
            <controls:CustomListView x:Name="optionsList"
			Grid.Row="1"
			ItemsSource="{Binding OptionsItems}"
			SeparatorVisibility="None">
                <controls:CustomListView.ItemTemplate>
                    <DataTemplate>
                        <controls:MenuCell/>
                    </DataTemplate>
                </controls:CustomListView.ItemTemplate>
            </controls:CustomListView>
        </StackLayout>
        <controls:CustomButton x:Name="synchroniseButton"
		Command="{Binding SynchroniseDataCommand}"
		Grid.Row="1"
		Text="{resources:Translate MenuPage_Synchronise}"
		VerticalOptions="End" IsEnabled="{Binding AppEnabled}"/>
    </Grid>
</ContentPage>