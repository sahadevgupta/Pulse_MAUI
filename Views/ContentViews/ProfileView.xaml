<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pulse_MAUI.Views.ContentViews.ProfileView"
             xmlns:controls="clr-namespace:Pulse_MAUI.Controls"
             xmlns:helpers="clr-namespace:Pulse_MAUI.Helpers">


    <VerticalStackLayout Padding="10" Spacing="4">

        <controls:CustomLabel FontSize="{x:Static helpers:FontSizes.Small}"
			HorizontalOptions="Start"
			Text="{Binding AppName}"
			TextColor="White" />

        <controls:CustomLabel FontSize="{x:Static helpers:FontSizes.Small}"
			HorizontalOptions="Start"
			Text="{Binding AppVersion,TargetNullValue=yyyy,FallbackValue=uuuuuuu}"
			TextColor="White" />
        <controls:CustomLabel FontSize="{x:Static helpers:FontSizes.Small}"
			HorizontalOptions="Start"
			Text="{Binding ProfileName}"
			TextColor="White" />
        <controls:CustomLabel FontSize="{x:Static helpers:FontSizes.Small}"
			HorizontalOptions="Start"
			Text="{Binding CurrentDate,TargetNullValue=yyyy,FallbackValue=uuuuuuu}"
			TextColor="White" />
    </VerticalStackLayout>

</ContentView>