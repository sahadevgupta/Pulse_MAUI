<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pulse_MAUI.Controls.CustomPicker"
             x:Name="customPicker">
    <VerticalStackLayout>
        <Label Style="{StaticResource LabelDefaultSignikaRegular}"
               Text="{Binding Title,Source={x:Reference customPicker}}"/>

        <Picker ItemsSource="{Binding ItemsSource,Source={x:Reference customPicker}}"
                SelectedItem="{Binding SelectedItem,Source={x:Reference customPicker}}"/>

    </VerticalStackLayout>
</ContentView>
